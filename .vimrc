let mapleader =  " "
set number
set rnu
syntax on
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2
colorscheme habamax
set ignorecase
set hlsearch


map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l

nnoremap <leader>, :vsplit<CR>
nnoremap <leader>. :split<CR>
nnoremap <leader>T :terminal<CR>

